<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlet.Register</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>servlet.EditUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Rezervation</servlet-name>
        <servlet-class>servlet.Rezervation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditHotel</servlet-name>
        <servlet-class>servlet.EditHotel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditRoom</servlet-name>
        <servlet-class>servlet.EditRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddHotel</servlet-name>
        <servlet-class>servlet.AddHotel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRoom</servlet-name>
        <servlet-class>servlet.AddRoom</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/EditUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Rezervation</servlet-name>
        <url-pattern>/Rezervation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditHotel</servlet-name>
        <url-pattern>/EditHotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditRoom</servlet-name>
        <url-pattern>/EditRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddHotel</servlet-name>
        <url-pattern>/AddHotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRoom</servlet-name>
        <url-pattern>/AddRoom</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
